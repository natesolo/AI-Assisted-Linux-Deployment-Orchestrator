# Default profile (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/aidlo
DB_USER=aidlo
DB_PASSWORD=change_me
POSTGRES_DB=aidlo
POSTGRES_USER=aidlo
POSTGRES_PASSWORD=change_me_docker

# API auth (enabled by default in application.yml)
AIDLO_API_KEY_ENABLED=true
AIDLO_API_KEY_HEADER=X-API-Key
AIDLO_API_KEY_VALUE=replace_with_strong_key
AIDLO_RATE_LIMIT_ENABLED=true
AIDLO_RATE_LIMIT_MAX_REQUESTS=10
AIDLO_RATE_LIMIT_WINDOW_SECONDS=60

# SSH policy
AIDLO_SSH_STRICT_HOST_KEY_CHECKING=true
AIDLO_SSH_ALLOW_PASSWORD_AUTH=false
AIDLO_SSH_KEY_PATH_POLICY_ENABLED=true
# Optional root overrides
# AIDLO_SSH_KEY_ROOT1=/home/your-user/.ssh
# AIDLO_SSH_KEY_ROOT2=/etc/ssh

# Execution tuning
AIDLO_MAX_RETRIES=2
AIDLO_ROLLBACK_RETRIES=1
AIDLO_RETRY_BACKOFF_MS=1000
AIDLO_COMMAND_TIMEOUT_SECONDS=90

# TLS (production)
AIDLO_TLS_ENABLED=false
# AIDLO_TLS_KEY_STORE=/path/to/keystore.p12
# AIDLO_TLS_KEY_STORE_PASSWORD=change_me
# AIDLO_TLS_KEY_STORE_TYPE=PKCS12
