# Default profile (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/aidlo
DB_USER=aidlo
DB_PASSWORD=change_me

# API auth (enabled by default in application.yml)
AIDLO_API_KEY_ENABLED=true
AIDLO_API_KEY_HEADER=X-API-Key
AIDLO_API_KEY_VALUE=replace_with_strong_key

# SSH policy
AIDLO_SSH_STRICT_HOST_KEY_CHECKING=true
AIDLO_SSH_ALLOW_PASSWORD_AUTH=false

# Execution tuning
AIDLO_MAX_RETRIES=2
AIDLO_ROLLBACK_RETRIES=1
AIDLO_RETRY_BACKOFF_MS=1000
AIDLO_COMMAND_TIMEOUT_SECONDS=90
